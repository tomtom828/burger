    <!-- Page Container -->
    <div class="container">
      
      <br>

      <!-- Burger Image -->
      <center>
        <div class="row">
          <img src="/assets/img/Krabby_Patty.png">
        </div>
      </center>

      <!-- Page Title -->
      <center>
        <h1 class="red_font">Eat da Burger! <small class="tiny_text">Best with a side of audio.</small></h1>
      </center>
      
      <br>
      

      <!-- Burger Content from index.handlebars -->
      {{{body}}}


      <br><br>

      <!-- Input New Burgers Form -->
      <form action="burger/create" method="POST"> 
        
        <!-- Text Area Input -->
        <div class="row">
          <!-- Empty Div to help center textarea -->
          <div class="col-md-3"></div> 

          <!-- Burger Input Box -->
          <div class="form-group col-md-6">
            <center><label for="new_burger" class="red_font">Request a new burger and place your order!</label></center>
